// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String  @id @map("id") @default(uuid())
  name    String? @unique
  password String?
  email   String? @unique
}

model Sector {
  id       String  @id @map("id") @default(uuid())
  capacity Int
  name     String? @unique
}

model Product {
  id       String  @id @map("id") @default(uuid())
  name     String?
  category String
  quantity Int
  order    Order @relation(fields: [orderId], references: [id])
  orderId  String
}

model Order {
  id           String    @id @map("id") @default(uuid())
  name         String?
  complete     Boolean?
  cart         Product[]
  scanner      Scanner @relation(fields: [scannerId], references: [id])
  scannerId    String
}

model Scanner {
  id     String  @id @map("id") @default(uuid())
  orders Order[]
}
