// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid()) @map("id")
  firstName String
  lastName  String
  password  String
  email     String  @unique
  orders    Order[]
}

model Sector {
  id       String    @id
  name     String?   @unique @map("name")
  products Product[]
}

model Product {
  id         String  @id @map("id")
  name       String?
  category   String?
  quantity   Int?
  sector     Sector? @relation(fields: [sectorName], references: [name])
  sectorName String?
  Order      Order?  @relation(fields: [orderId], references: [id])
  orderId    String?
}

model Order {
  id         String    @id @map("id")
  customer   Customer  @relation(fields: [customerId], references: [id])
  customerId String
  address    Address   @relation(fields: [addressId], references: [id])
  addressId  String
  complete   Boolean
  cart       Product[]
  user       User?     @relation(fields: [userId], references: [id])
  userId     String?
}

model Customer {
  id        String  @id @default(uuid()) @map("id")
  firstName String
  lastName  String
  email     String  @unique
  phone     String?
  orders    Order[]
}

model Address {
  id              String  @id @default(uuid()) @map("id")
  city            String
  state           String
  country         String
  streetName      String
  buildingNumber  Int
  apartmentNumber String
  order           Order[]
}
